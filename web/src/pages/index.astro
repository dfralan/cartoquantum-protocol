---
import Layout from '@/layouts/Layout.astro';
---

<Layout
	title="CartoQuantum Protocol"
	description="Encode and share ephemeral, self-contained objects with cartographic algebra. Decentralized. Compressed. Untraceable."
	image='/favicon.svg'
	>
    <main class="flex flex-col items-center justify-center min-h-screen px-4">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-center">
        CartoQuantum Protocol
      </h1>
      <p class="text-lg text-center max-w-xl mb-8">
        Encode and share ephemeral, self-contained objects with cartographic algebra. Decentralized. Compressed. Untraceable.
      </p>
      <div class="flex gap-4">
        <a href="/gen" class="px-6 py-3 bg-gray-900 text-white rounded hover:bg-gray-800 transition">
          Generate Link
        </a>
        <a href="https://github.com/dfralan/cartoquantum-protocol" target="_blank" class="px-6 py-3 border border-gray-900 text-gray-900 rounded hover:bg-gray-100 transition">
          View Source
        </a>
      </div>
    </main>
</Layout>
